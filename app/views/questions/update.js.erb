<% if @question.errors.present? %>
  $('#question_<%= @question.id %> .question-errors').html('<%= render 'shared/errors', resource: @question %>');

  $('#question_<%= @question.id %> #question_title').removeClass('error');
  $('#question_<%= @question.id %> #question_body').removeClass('error');

  <% @question.errors.each do |error| %>
    $('#question_<%= @question.id %> #question_<%= error.attribute %>').addClass('error');
  <% end %>
<% else %>
  $('#question_<%= @question.id %>').replaceWith('<%= j render @question %>');
  setHandlerOnChangeFiles(null, 'question', <%= @question.id %>)

  addAlert('Question has been edited successfully.', 'success');
<% end %>
